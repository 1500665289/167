	<!-- 封神天兵后遗症效果 -->
	<Modifier Name="LQDX_fstbhm" Type="Normal">
		<DisplayName>封神天兵</DisplayName>
		<Desc>使用封神天兵的后遗症，元神进入寂灭9天。</Desc>
		<MaxStack>1</MaxStack>          <!-- 最大叠加层数为1 -->
		<Duration>5400</Duration>        <!-- 持续时间5400单位（游戏时间） -->
		<Display>1</Display>            <!-- 在UI中显示 -->
		<Sync>1</Sync>                 <!-- 需要同步到客户端 -->
		<Modifiers>
			<li>Modifier_Item_ZaoHuaYuLu1</li>  <!-- 关联其他状态效果 -->
		</Modifiers>
		<Damages>
			<li Part="Brain" Damage="ZaoHuaYuLu_YuanShenJiMie" Value="0.8"/>  <!-- 对大脑部位造成元神寂灭伤害 -->
		</Damages>
	</Modifier> 

